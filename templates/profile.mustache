<div class="container">
    <h1 class="display-3">
        {{name}}
    </h1> 
    {{#errors}}
    <form method="POST" action="changePass.php">
        <div class="form-group" >
            <p class="display-4">Změna hesla</p>
            <div class="form-group">
                <label for="oldPass">Staré heslo</label>
                {{#oldPassWrong}}
                <input type="password" class="form-control is-invalid" id="oldPass" aria-describedby="emailHelp"
                placeholder="Staré heslo" name="oldPass">
                <div class="invalid-feedback">
                    Heslo není správně.
                </div>
                {{/oldPassWrong}}
                {{^oldPassWrong}}
                <input type="password" class="form-control" id="oldPass" aria-describedby="emailHelp"
                    placeholder="Staré heslo" name="oldPass">
                {{/oldPassWrong}}

            </div>
            <div class="form-group">
                <label for="newPass">Nové heslo</label>
                {{#newPassWrong}}
                <input type="password" class="form-control is-invalid" id="newPass" aria-describedby="emailHelp"
                    placeholder="Nové heslo" name="newPass">
                <div class="invalid-feedback">
                    {{#samePass}}Heslo musí být jiné, než původní.<br>{{/samePass}}
                    {{#newEmpty}}Heslo musí mít minimálně 8 znaků.<br>{{/newEmpty}}
                </div>
                {{/newPassWrong}}
                {{^newPassWrong}}
                <input type="password" class="form-control" id="newPass" aria-describedby="emailHelp"
                    placeholder="Nové heslo" name="newPass">
                {{/newPassWrong}}

            </div>
            <button type="submit" class="btn btn-primary">Změnit heslo</button>
        </div>

    </form>
    {{/errors}}
    <form method="POST" action="loggedOut.php">
        <div class="form-group">
            <p class="display-4">Odhlásit se</p>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Log out</button>
        </div>
    </form>
</div>